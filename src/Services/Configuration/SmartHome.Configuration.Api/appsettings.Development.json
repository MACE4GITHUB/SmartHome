{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Trace"
    }
  },
  "LogToSerilog": true,
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithThreadName"
    ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "%BASEDIR%/Logs/serilog-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "shared": true,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Properties": {
      "Application": "SmartHome.Configuration"
    }
  },
  "Database": {
    "ConnectionString": "Data Source=(localdb)\\MsSQLLocalDb;Initial Catalog=SmartHome.Services.Configuring.OrderingDb"
  }
}
